<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <!-- jQuery 추가 -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <!-- CSS -->
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <h1> 🏡 재은이의 집 ... </h1>
    <header style="border-bottom: 1px solid lightgray; margin-bottom: 10px; padding-bottom: 10px;">
        <% const items = [
            { page: "home", href: "/", name: "홈"},
            { page: "profile", href: "/profile", name: "프로필"},
            { page: "visit", href: "/visit", name: "찾아오시는길"},
            { page: "blog", href: "/blog", name: "블로그"},
            { page: "users", href: "/users", name: "세입자"},
            { page: "contact", href: "/contact", name: "방명록"}
        ];
        %>
        <nav>
        <% items.forEach(item => { %>
                <a href="<%= item.href %>" class="nav-link" data-page="<%= item.page %>"> <%= item.name %> </a>
        <% }) %>
    </nav>
        
    </header>

    <script src='/js/header.js'></script>
    